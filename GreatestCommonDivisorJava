// This program implements an algorithm that finds the Greatest Common Divisor of two integers using Java language. 

/******* Java ********/

import java.util.Scanner;

public class GCD{

  public static void main (){
  
    // Initialize the Scanner object
    Scanner scan = new Scanner(System.in);
    
    // Declare the two integer variables (Dividend and Divisor) and remainder.
    int dividend, divisor, remainder;
    
    // Ask user for the inputs
    System.out.println("Please enter two integers to find their GCD:");
    
    System.out.println("Dividend value: ");
    dividend = scan.nextInt();
    
    System.out.println("Divisor value: ");
    divisor = scan.nextInt();
    
    // Use a while loop
    while( divisor != 0){
    
      //Find the reminder of the division (dividend/ divisor)
      remainder = dividend % divisor;
      
      //Set the dividend equal to divisor.
      dividend = divisor;  // dividend becomes divisor until the remainder = 0.
      
      //Set the divisor equal to the remainder.
      divisor = remainder; // divisor becomes remainder
      
    } // the loop stop when divisor = 0.
    
    // Print the Gretest Common Divisor which is "dividend" after many iterations. 
    // Don't get confuse with the value of "dividend". It changes every iteration.
    System.out.println("The GCD of those two integers is: " + dividend); 
  
  }
}

